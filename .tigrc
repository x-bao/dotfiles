set line-graphics = utf-8
set mailmap = yes
#set mouse = yes
set main-view = line-number:no,interval=5 id:yes date:default author:abbreviated commit-title:yes,graph,refs,overflow=no
#set diff-highlight = true
set tab-size = 4
set ignore-case = smart-case
#set commit-encoding = utf-8   # Commit encoding
source ~/.tigrc.vim
set mouse-scroll = 1
set mouse-wheel-cursor = 1

bind generic ; prompt
bind main R !git rebase -i %(commit)~1

color title-blur		39	235	bold
color title-focus		39	232	bold reverse
color cursor			232	154	bold
color status			82	default
