function proxyOff() {
    unset http_proxy
    unset https_proxy
    unset HTTP_PROXY
    unset HTTPS_PROXY
    unset all_proxy
    unset ALL_PROXY
    echo -e "Bye~"
}

function proxySimpleOn() {
    export http_proxy=http://127.0.0.1:1087;
    export https_proxy=http://127.0.0.1:1087;
    export HTTP_PROXY=http://127.0.0.1:1087;
    export HTTPS_PROXY=http://127.0.0.1:1087;
    export all_proxy=http://127.0.0.1:1087;
    export ALL_PROXY=http://127.0.0.1:1087;
    echo -e "Enjoy~"
}

function proxyAllOn() {
    privoxy ~/.privoxyrc
    export no_proxy="localhost,127.0.0.1,localaddress,.localdomain.com"
    export http_proxy="http://127.0.0.1:8118"
    export https_proxy=$http_proxy
    echo -e "Enjoy~"
}

function proxyHelp () {
    echo 'proxy'
    echo '  Proxy on iTerm2'
    echo "\n"

    echo 'Usage:'
    echo '  proxy -h'
    echo '  proxy -a'
    echo '  proxy -s'
    echo '  proxy -f'
    echo '  proxy -t'
    echo "\n"

    echo 'Options:'
    echo "  -a --all \tProxy all commands"
    echo "  -s --simple \tProxy part of commands, eg: curl wget brew"
    echo "  -t --test \tTest proxy is valid"
    echo "  -f --off \tTurn off proxy"
    echo "  -h --help \tShow help"
    echo "\n"

    echo 'Examples:'
    echo 'Proxy all commands'
    echo '  proxy -a'
    echo '  proxy --all'
    echo "\n"

    echo 'Proxy part of commands'
    echo '  proxy -s'
    echo '  proxy --simple'
    echo "\n"

    echo 'Proxy off'
    echo '  proxy -f'
    echo '  proxy --off'
    echo "\n"

    echo 'Proxy test'
    echo '  proxy -t'
    echo '  proxy --test'
}

function proxy () {
    case $1 {
        (-a)
            ;&
        (all)
            ;&
        (--all)
            proxyAllOn
            ;;
        (-s)
            ;&
        (simple)
            ;&
        (--simple)
            proxySimpleOn
            ;;
        (-f)
            ;&
        (off)
            ;&
        (--off)
            proxyOff
            ;;
        (-h)
            ;&
        (help)
            ;&
        (--help)
            proxyHelp
            ;;
        (-t)
            ;&
        (test)
            ;&
        (--test)
            curl -I https://www.google.com
            ;;
        (*)
            proxy -s
            ;;
    }
}

